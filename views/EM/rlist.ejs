<!DOCTYPE html>
<html>

<head>
  <%include ../partials/head %>
</head>

<body>
  <div class="jumbotron" id="fortop" align="center">
    <h1 style="color:white;">Request Box</h1>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="well"><h2 align="center">Messages to Party</h2></div>
      <form action="/em/request/create" method="post">
        <input type="text" name="cname" placeholder="Your Name" class="form-control" value="<%=result.name%>" >
        <input type="text" name="pname" placeholder="Party Name" class="form-control">
        <input type="text" name="content" placeholder="Message" class="form-control">
        <input type="hidden" name="ename" placeholder="Ename" value="Party" class="form-control"  >
        <br/>

        <button type="submit" name="button" class="btn btn-warning"> Send</button>

      </form>

    </div>

    <div class="col-sm-3">
    <div class="well">  <h2 align="center">Messages From Party</h2> </div>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Party</th>
                <th>Message</th>
                <th>#</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<preqs.length; i++) {%>
                <tr>
                  <td>
                    <%= preqs[i].from %>
                  </td>
                  <td>
                    <%= preqs[i].content %>
                  </td>
                  <td><a href="/em/request/resolve/<%= preqs[i]._id %>"><button type="submit" class="btn btn-primary">Read</button></a></td>

                </tr>
                <% }%>
            </tbody>
          </table>



  </div>

    <div class="col-sm-3">
    <div class="well">  <h2 align="center"> Messages to Candidates </h2> </div>
    <form action="/em/request/create" method="post">
      <input type="text" name="cname" placeholder="Your Name" class="form-control" value="<%=result.name%>">
      <input type="text" name="pname" placeholder="Candidate Name"  class="form-control"  >
      <input type="hidden" name="ename" placeholder="Ename" value="Candidate" class="form-control"  >
      <input type="text" name="content" placeholder="Message" class="form-control">
      <br/>

      <button type="submit" name="button" class="btn btn-danger"> Send</button>

    </form>

  </div>
  <div class="col-sm-3">
    <div class="well">  <h2 align="center"> Messages From Candidates </h2> </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Candidate</th>
          <th>Message</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<creqs.length; i++) {%>
          <tr>
            <td>
              <%= creqs[i].from %>
            </td>
            <td>
              <%= creqs[i].content %>
            </td>
            <td><a href="/em/request/resolve/<%= creqs[i]._id %>"><button type="submit" class="btn btn-primary">Read</button></a></td>

          </tr>
          <% }%>
      </tbody>
    </table>

  </div>

  </div>

</body>

</html>
