<!DOCTYPE html>
<html>
<head>

</head>
<% include ../partials/head %>
<body>
<% include ../partials/nav %>

  <div class="container-fluid">
    <div class="container">
    <div class="jumbotron">
    <form action="/addcand" method="post">
    <div class="row">
      <div class="col-sm-6">
        <input autocomplete=off type="text" name="id" class="form-control"  placeholder="Id">
        <input autocomplete=off type="text" name="name" class="form-control"  placeholder="Candidate Name">
        <input autocomplete=off type="text" name="par" class="form-control"  placeholder="Individual Or Party">
        <br/>
        <button type="submit" class="btn btn-primary" >Add Candidate</button>
      </div>
      </form>
      <div class="col-sm-6" >
        <h4>Candidate List</h4>

        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th>#</th>
              <th>Name</th>
              <th>Individual / Party</th>
            </tr>
          </thead>
          <tbody>
            <tr class ="candidates">
              <% for(var i=0; i<candidates.length; i++) {%>
                <td class="condidate">
                  <td><%= candidates[i].id %></td>
                  <td><%= candidates[i].name %></td>
                  <td><%= candidates[i].par %></td>
                </td>
                </tr>
                <% } %>
            </tr>

                </tbody>
        </table>
      </div>

    </div>

  </div>
  </div>
  </div>



</body>

<footer id="footer">
<% include ../partials/footer %>
</footer>
<footer id="underfooter">
<% include ../partials/footer2 %>
</footer>

</html>
